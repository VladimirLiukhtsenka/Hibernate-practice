<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.liukhtenko.ticket.entity.CourseEntity" table="course" schema="university">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="teacherId">
            <column name="teacher_id" sql-type="bigint(20)"/>
        </property>
    </class>
</hibernate-mapping>